<%- include('../layouts/start.ejs') %>
     <link rel="stylesheet" href="/Css/addProduct.css">
     <link rel="stylesheet" href="/Css/responsive.css">
     <link rel="stylesheet" href="/Css/main.css">
     <script src="/js/main.js" defer></script>
</head>

<body>
     <%- include('../layouts/navigation.ejs') %>
     <div class="container">
     <main class="flex add_product-main">
          <form method="post" action="/admin/add-product" class="form flex ">
               <div class="form-control flex">
                    <label for="title">Title</label>
                    <input type="text" name="title" class="add_inputs">
                   
               </div>
               <div class="form-control flex">
                    <label for="imageUrl">Image URL</label>
                    <input type="text" name="imageUrl" class="add_inputs">
                 
               </div>
               <div class="form-control flex">
                    <label for="price">Price</label>
                    <input type="number" name="price" step="0.01" class="add_inputs">
               </div>
               <div class="form-control flex">
                    <label for="description">Description</label>
                    <textarea name="description" id="description" rows="5" class="add_inputs"></textarea>
                   
               </div>
               <input type="hidden" name="_csrf" value="<%=csrfToken%>">
               <button type="submit" class="add_product-btn">Add Product</button>
          </form>
          <%- include('../layouts/end.ejs') %>