<%- include('../layouts/start.ejs') %>

<link rel="stylesheet" href="/Css/shop.css">
</head>

<body>
  <div class="container">
    <%- include('../layouts/navigation.ejs') %>

    <main class="flex">
      <div class="body_head flex">

        <% if (order.length > 0) { %>
          <div class="flex_able">

            <% for (let singleOrder of order) { %>
              <% for (let item of singleOrder.products) { %>

                <article class="card product-item">
                  <header class="card__header">
                    <h1 class="product__title">
                      <%= item.product.title %>
                    </h1>
                  </header>

                  <div class="card__image">
                    <img
                      src="<%= item.product.imageUrl %>"
                      alt="<%= item.product.title %>">
                  </div>

                  <div class="card__content">
                    <p class="product__description">
                      <%= item.product.description %>
                    </p>
                    <h2 class="product__price">
                      $<%= item.product.price %>
                    </h2>
                    <div class="flex order_invoice-container">
                    <p>Quantity: <%= item.quantity %></p>
                    <a href="/order/<%=singleOrder._id%>" class="btn">View Invoice</a>
                    <a href="/order/<%=singleOrder._id%>?download=true" class="btn">Download Invoice</a>
                    </div>
                    

                  </div>

                </article>

              <% } %>
            <% } %>

          </div>
        <% } else { %>
          <h1>No Product Yet!</h1>
        <% } %>

      </div>
    </main>

    <%- include('../layouts/end.ejs') %>
